from manager import Manager

class Structure(object):

    @staticmethod
    def table_has_column(table, column):
        return column in Manager.get_schema()[table]
        
    @staticmethod
    def get_all_tables():
        return Manager.get_schema().keys()
        
    @staticmethod
    def table_exists(table):
        return table in Manager.get_schema()
        
    @staticmethod
    def get_all_columns(table):
        return Manager.get_schema()[table]
